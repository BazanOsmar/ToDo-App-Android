<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddTaskActivity"
    android:paddingHorizontal="20dp"
    android:layout_marginVertical="10dp">
    <FrameLayout
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/icon_color"/>
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/etTileTask"
            app:layout_constraintStart_toStartOf="parent"/>
        <Button
            android:id="@+id/btnEditTask"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_edit"
            android:layout_gravity="end"
            android:textSize="16dp"
            android:background="@drawable/button_transparent"
            android:textColor="@color/black"
            android:tint="@color/white"
            android:text="Editar"/>
        <LinearLayout
            android:id="@+id/ContainerIconos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end">
            <ImageView
                android:id="@+id/btnCalendar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_calendar"
                app:tint="@color/icon_color"
                android:layout_marginHorizontal="10dp"/>
            <ImageView
                android:id="@+id/btnAdd"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_check"
                app:tint="@color/icon_color"/>
        </LinearLayout>

    </FrameLayout>
    <EditText
        android:id="@+id/etTileTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="30dp"
        android:textColor="@color/txt_content"
        android:textStyle="bold"
        android:singleLine="false"
        android:hint="@string/title_task"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"  />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/etTileTask"
        app:layout_constraintBottom_toBottomOf="parent">
        <EditText
            android:id="@+id/etContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="@color/txt_content"
            android:background="@color/transparent"
            android:inputType="textMultiLine"
            android:hint="@string/add_task_hint_description"/>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>